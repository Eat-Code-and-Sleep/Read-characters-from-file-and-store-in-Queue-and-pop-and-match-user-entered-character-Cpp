#include <iostream>
#include <fstream>
#include <queue>
using namespace std;

void popAndMatch(queue<char> q,char c)
{
  int count=0;
  
	while (!q.empty()) {
	  
		if(q.front() == c) {
		  count++;
		}
		q.pop();
	}
	cout<< "Character "<< c << " exists " << count << " times";
}
int main() {

ifstream fin;
queue<char> Q;
char c,x;
int i;
fin.open("problem4.txt", ios::in);

char my_character ;

	while (!fin.eof() ) {

	fin.get(my_character);
	if (my_character != ' ' && my_character != '\n'){
	    Q.push(my_character);
		}
	}

cout<<"Enter Character You are looking for? ";
cin >> c;
popAndMatch(Q,c);
}
